@model Fakturisanje.Models.Stavka

@{
    ViewData["Title"] = "Promena stavke";
}

<h2>Promena stavke</h2>
<br />
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="StavkaId" />
            <div class="form-group">
                <label asp-for="FakturaId" class="control-label"></label>
                <select asp-for="FakturaId" class="form-control" asp-items="ViewBag.FakturaId"></select>
                <span asp-validation-for="FakturaId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RedniBroj" class="control-label"></label>
                <input asp-for="RedniBroj" class="form-control" />
                <span asp-validation-for="RedniBroj" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Kolicina" class="control-label"></label>
                <input asp-for="Kolicina" class="form-control" />
                <span asp-validation-for="Kolicina" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Cena" class="control-label"></label>
                <input asp-for="Cena" class="form-control" />
                <span asp-validation-for="Cena" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Ukupno" class="control-label"></label>
                <input asp-for="Ukupno" class="form-control" />
                <span asp-validation-for="Ukupno" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Nazad na listu stavki</a>
</div>

